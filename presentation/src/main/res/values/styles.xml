<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="bottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bnv_color_selector</item>
        <item name="itemTextColor">@color/bnv_color_selector</item>
    </style>

    <style name="ProductSans" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/product_sans</item>
    </style>

    <style name="ProductSans.DetailsTitleTextAppearance">
        <item name="android:textSize">@dimen/text_size_26_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductSans.DetailsSubTitleTextAppearance">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
        <item name="android:textColor">@color/gray500</item>
    </style>

    <style name="ProductSans.DetailsCommonTextAppearance">
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/movie_details_delimiter_margin</item>
        <item name="android:layout_marginStart">@dimen/movie_details_delimiter_margin</item>
    </style>

    <style name="ProductSans.DetailsSecondaryTextAppearance">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_12_sp</item>
        <item name="android:textColor">@color/gray500</item>
        <item name="android:layout_marginTop">@dimen/movie_details_delimiter_margin</item>
        <item name="android:layout_marginStart">@dimen/movie_details_delimiter_margin</item>
    </style>
</resources>