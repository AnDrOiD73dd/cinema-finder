<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/cv_movie_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_layout_margin"
        android:clickable="true"
        android:elevation="@dimen/card_elevation"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/card_padding"
        app:cardCornerRadius="@dimen/card_corner_radius">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_layout_margin" tools:layout_editor_absoluteY="5dp"
            tools:layout_editor_absoluteX="5dp">
        <ImageView
                android:id="@+id/iv_poster_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/poster"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv_title_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_layout_margin"
                android:ellipsize="end"
                android:fontFamily="@font/product_sans_bold"
                android:maxEms="15"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="@id/iv_poster_search"/>
        <ImageView
                android:id="@+id/iv_vote_average_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/card_layout_margin"
                android:contentDescription="@string/star"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@id/iv_poster_search" />
        <TextView
                android:id="@+id/tv_vote_average_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_layout_margin"
                app:layout_constraintBottom_toBottomOf="@id/iv_vote_average_search"
                app:layout_constraintStart_toEndOf="@id/iv_vote_average_search"
                app:layout_constraintTop_toTopOf="@id/iv_vote_average_search"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>